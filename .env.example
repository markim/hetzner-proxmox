# Hetzner Proxmox Setup Configuration
# Copy this file to .env and fill in your values

# Domain configuration
DOMAIN=your-domain.com
EMAIL=your-email@domain.com

# Proxmox configuration
PROXMOX_PORT=8006
PROXMOX_HOST=localhost

# Caddy configuration
CADDY_CONFIG_DIR=/etc/caddy
CADDY_DATA_DIR=/var/lib/caddy

# Logging
LOG_FILE=/var/log/hetzner-proxmox-setup.log
LOG_LEVEL=INFO

# SSL/TLS
ACME_EMAIL=your-email@domain.com
ENABLE_STAGING=false

# Network configuration
PUBLIC_IP=
INTERNAL_IP=127.0.0.1

# Additional IPs from Hetzner (for containers/VMs)
# Format: IP:MAC:GATEWAY:NETMASK,IP:MAC:GATEWAY:NETMASK
# Example:
# ADDITIONAL_IPS=YOUR_ADDITIONAL_IP:YOUR_MAC_ADDRESS:YOUR_GATEWAY_IP:YOUR_NETMASK,YOUR_ADDITIONAL_IP2::YOUR_GATEWAY_IP:YOUR_NETMASK
ADDITIONAL_IPS=

# Network interface settings
MAIN_INTERFACE=eth0
CONTAINER_BRIDGE=vmbr1

# pfSense configuration (for future use)
PFSENSE_VM_ID=100
PFSENSE_IP=
PFSENSE_WAN_IP=
PFSENSE_LAN_IP=10.0.1.1
PFSENSE_DMZ_IP=10.0.2.1
PFSENSE_MEMORY=2048
PFSENSE_CPU_CORES=2
PFSENSE_DISK_SIZE=8

# Firewall Admin Container configuration
FIREWALL_ADMIN_CT_ID=200
FIREWALL_ADMIN_HOSTNAME=firewall-admin
FIREWALL_ADMIN_MEMORY=1024
FIREWALL_ADMIN_CORES=1
FIREWALL_ADMIN_DISK_SIZE=8
FIREWALL_ADMIN_WAN_IP=
FIREWALL_ADMIN_LAN_IP=10.0.1.10
